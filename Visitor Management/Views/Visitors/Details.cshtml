@model Visitor_Management.Models.Visitor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Visitor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Arrivaltime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Arrivaltime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.departuretime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.departuretime)
        </dd>
        <div class="form-group">
            <label><h1>Items:</h1></label>
            <table class="table">
                <thead>
                    <tr>
                        <th>Item Name</th>
                        <th>Quantity</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="items-table-body">
                    @if (Model.Items != null)
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <input type="text" class="form-control item-name" value="@item.Item_Name" />
                                </td>
                                <td>
                                    <input type="number" class="form-control item-qty" value="@item.Qty" />
                                </td>
                                <td>
                                    <a href="#" class="btn btn-danger remove-item">Remove</a>
                                </td>
                            </tr>
                        }
                    }


                </tbody>
            </table>
        </div>
       
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
